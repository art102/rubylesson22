<h2>Контакты</h2>

<form action="/contacts" method="POST" role='form'>

  <div class="form-group">
    <label >Электронная почта</label>
    <input name="email" type="mail" class="form-control"  placeholder="Введите адрес вашей электронной почты" value="<%=@user_email%>">
  </div>

  <div class="form-group">
   
    <textarea name="user_message" rows="4" cols="50">

    </textarea>
  </div>

  <button type="submit" class="btn btn-success">Отправить</button>

</form>
